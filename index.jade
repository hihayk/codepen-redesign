html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='style/main.css')
  body.overflow-x-hidden
    .global-container.flex.flex-column.relative
      .header-section.flex.items-center
        .logo
          img(src="images/logo.svg", alt="Codepen")
        
        .pen-main-info.ml3
          .pen-title Menu
          .pen-author a pen by hayk
        
        .flex-auto

        .language-switches.flex
          .language-switch.active html
          .language-switch.active css
          .language-switch.active js
          .language-switch console
        .mr2

        .language-switches.flex
          .language-switch.layout-mode.flex.items-center
            img(src="images/layout-1.svg")
          .language-switch.layout-mode.flex.items-center.active
            img(src="images/layout-2.svg")
          .language-switch.layout-mode.flex.items-center
            img(src="images/layout-3.svg")

        .mr3
        
        .opt-button.button-unsaved.mr1
          img(src="images/cloud.svg").opt-button-icon
          | Save
