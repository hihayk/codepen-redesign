                span.language-type (SCSS)
              .flex-auto
              
              a(href="").code-button.mr1.on-hover-opaque-output View Compiled
              img(src="images/gear.svg").mr2.on-hover-opaque-output
              img(src="images/cross.svg").on-hover-opaque-output

          .language-split
            .language-header.on-hover-opaque-input.flex.items-center.mx2
              .language-title JS

              .flex-auto
              
              a(href="").code-button.mr1.on-hover-opaque-output Tidy
              img(src="images/gear.svg").mr2.on-hover-opaque-output
              img(src="images/cross.svg").on-hover-opaque-output

        .view-section.flex-auto

    .panel
      .panel-bg
      .panel-container.bg-grey2
